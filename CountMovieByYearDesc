val moviesRdd = spark.sparkContext.textFile("C://Users//anand.dishant//Documents//Big-Data//spark-practice//files//data//movies//movies.tsv");

moviesRdd.map(line => {val stringArray = line.split("\t"); (stringArray(1) , stringArray(2))})
.reduceByKey((total,value) => value).map(tuple => (tuple._2,tuple._1))
.groupByKey.map(tuple => (tuple._1 , tuple._2.size))
.sortByKey(false).collect
